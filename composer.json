{
    "name": "avadim/manticore-query-builder-php",
    "description": "Manticore Search Query Builder for PHP (unofficial PHP client)",
    "keywords": [
		"manticoresoftware",
        "manticoresearch",
        "spinx",
        "search"
    ],
    "type": "library",
    "homepage": "https://github.com/manticore-query-builder-php",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "avadim\\Manticore\\": "./src/Manticore"
        }
    },
    "require": {
        "php": "^7.4|^8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "psr/log": ">=1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    }
}
